{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row mb-3">
            {% for param in ['vehicles', 'people', 'films', 'starships', 'planets', 'species'] %}
                    <div class="col-2 pl-0">
                    {% if name != param %}
                        <a href="{{ path('api_start_wars', {'name' : param}) }}"> {{ param|upper }}</a>
                    {% else %}
                        <span>{{ param|upper }}</span>
                    {% endif %}
                    </div>
            {% endfor %}
        </div>
        <div class="row mb-3">
            <div class="col-6 pl-0">
                <input type="text" id="search" class="form-control"/>
            </div>
            <div class="col-2">
                <button class="form-control btn-primary" data-url_search="{{ path('api_search_start_wars', {'name': name}) }}" id="btnSearch">Rechercher</button>
            </div>
        </div>
        <div class="row wrapper-results"></div>
    </div>

    <div class="modal" id="modal_api_details" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">DÃ©tails</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body"></div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}